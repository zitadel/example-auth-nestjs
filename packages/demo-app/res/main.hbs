<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{pageTitle}}</title>
    <style>
      body {
        font-family: 'Inter', sans-serif;
        margin: 20px;
        background-color: #f4f7f6;
        color: #333;
      }
      nav {
        margin-bottom: 20px;
        background-color: #ffffff;
        padding: 15px 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      nav .nav-links a {
        margin-right: 15px;
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
        transition: color 0.2s ease;
      }
      nav .nav-links a:hover {
        color: #0056b3;
      }
      .container {
        border: 1px solid #e0e0e0;
        padding: 20px;
        border-radius: 8px;
        background-color: #ffffff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
      }
      .error-message {
        color: red;
        font-weight: bold;
      }
      .user-info {
        background-color: #f0f0f0;
        padding: 10px;
        margin-top: 15px;
        border-radius: 5px;
      }

      /* Button styles for login/logout */
      .auth-button {
        display: inline-block;
        padding: 10px 20px;
        background: linear-gradient(145deg, #007bff, #0056b3);
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: bold;
        font-size: 0.9em;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
        border: none;
        cursor: pointer;
      }
      .auth-button.logout {
        background: linear-gradient(
          145deg,
          #dc3545,
          #c82333
        ); /* Red gradient for logout */
        box-shadow: 0 4px 10px rgba(220, 53, 69, 0.3);
      }
      .auth-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(0, 123, 255, 0.4);
      }
      .auth-button.logout:hover {
        box-shadow: 0 6px 15px rgba(220, 53, 69, 0.4);
      }
      .auth-button:active {
        transform: translateY(0);
        box-shadow: 0 2px 5px rgba(0, 123, 255, 0.2);
      }
      .auth-button.logout:active {
        box-shadow: 0 2px 5px rgba(220, 53, 69, 0.2);
      }
    </style>
  </head>
  <body>
    <nav>
      <div class='nav-links'>
        <a href='/'>Home</a>
        {{#if isAuthenticated}}
          <a href='/profile'>Profile</a>
        {{/if}}
      </div>
      <div>
        {{#if isAuthenticated}}
          <a href='{{logoutUrl}}' class='auth-button logout'>Logout</a>
        {{else}}
          <a href='{{loginUrl}}' class='auth-button'>Login</a>
        {{/if}}
      </div>
    </nav>
    <div class='container'>
      {{{body}}}
      <!-- This is where your page content will be injected -->
    </div>
  </body>
</html>