  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "isolatedModules": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "noEmit": true
